<p id="notice"><%= notice %></p>

<h1>Hacker News Top Links</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Total Shares</th>
      <th>Facebook Shares</th>
      <th>Google Shares</th>
      <th>Linkedin Shares</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td><%= link_to "#{content.title}", content.link %></td>
        <td><%= content.total_shares %></td>
        <td><%= content.facebook_shares %></td>
        <td><%= content.google_shares %></td>
        <td><%= content.linkedin_shares %></td>
        <td><%= link_to 'Show', content %></td>
        <td><%= link_to 'Edit', edit_content_path(content) %></td>
        <td><%= link_to 'Destroy', content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

